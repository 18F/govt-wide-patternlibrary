<div class="usa-form-group">
  <label class="usa-label" for="file-input-specific">La entrada solo acepta tipos de archivos específicos</label>
  <input id="file-input-specific"
    class="usa-file-input"
    type="file"
    name="file-input-specific"
    aria-describedby="file-input-specific-hint"
    accept=".pdf,.txt"
    {% if multiple == true %}multiple="multiple"{% endif %}
    data-drag-text-singular="Arrastre archivo aquí o"
    data-drag-text-plural="Arrastre archivos aquí o"
    data-choose-text="elegir de la carpeta"
    data-status-text-singular="Ningún archivo seleccionado"
    data-status-text-plural="No hay archivos seleccionados"
    data-change-file-text-singular="Cambiar archivo"
    data-change-file-text-plural="Cambiar archivos"
    data-selected-file-text-singular="Archivo seleccionado"
    data-selected-file-text-plural="archivos seleccionados"
  />
</div>
