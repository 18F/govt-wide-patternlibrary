<div class="usa-form-group">
  <label class="usa-label" for="file-input-specific">La entrada solo acepta tipos de archivos específicos</label>
  <input id="file-input-specific"
    class="usa-file-input"
    type="file"
    name="file-input-specific"
    aria-describedby="file-input-specific-hint"
    accept=".pdf,.txt"
    {% if multiple_inputs == true %}multiple="multiple"{% endif %}
    data-default-drag-text-singular="Arrastre archivo aquí o"
    data-default-drag-text-plural="Arrastre archivos aquí o"
    data-default-choose-text="elegir de la carpeta"
    data-default-status-text-singular="Ningún archivo seleccionado"
    data-default-status-text-plural="No hay archivos seleccionados"
    data-default-change-text="Cambiar archivo"
  />
</div>