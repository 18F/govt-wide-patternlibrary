<div class="usa-form-group">
  <label class="usa-label" for="file-input-specific">La entrada solo acepta tipos de archivos espec√≠ficos</label>
  <input id="file-input-specific"
    class="usa-file-input"
    type="file"
    name="file-input-specific"
    aria-describedby="file-input-specific-hint"
    accept=".pdf,.txt"
    {% if multiple == true %}multiple="multiple"{% endif %}
    data-change-file-text="{{ change_file_text }}"
    data-choose-text="{{ choose_text }}"
    data-drag-text="{{ drag_text }}"
    data-error-message="{{ error_message }}"
    data-no-file-text="{{ no_file_text }}"
    data-selected-file-text="{{ selected_file_text }}"
    {% if include_singular == true %}
    data-change-file-text-singular="{{ change_file_text_singular }}"
    data-drag-text-singular="{{ drag_text_singular }}"
    data-no-file-text-singular="{{ no_file_text_singular }}"
    data-selected-file-text-singular="{{ selected_file_text_singular }}"
    {% endif %}
  />
</div>
