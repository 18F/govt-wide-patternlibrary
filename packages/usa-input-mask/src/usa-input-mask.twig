<form class="usa-form">
    <div class="usa-form-group">
      <label class="usa-label" for="{{ id }}">{{ label }}</label>
      <div class="usa-hint" id="{{ id }}-hint">{{ hint }}</div>
      <input
          aria-describedby="{{ id }}-hint"
          class="usa-input usa-input-mask"
          {% if customInvalidAlphaText %}data-invalid-alpha-text="{{ customInvalidAlphaText }}"{% endif %}
          {% if customInvalidNumericText %}data-invalid-numeric-text="{{ customInvalidNumericText }}"{% endif %}
          {% if forceCase == "forceupper" %}forceupper="true"{% endif %}
          {% if forceCase == "forcelower" %}forcelower="true"{% endif %}
          id="{{ id }}"
          inputmode="{{ inputmode }}"
          mask="{{ mask }}"
          name="{{ id }}"
          placeholder="{{ placeholder }}"
          type="{{ type }}"
      >
    </div>
</form>
