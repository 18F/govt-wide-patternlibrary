<form class="usa-form">
  <label class="usa-label" for="{{ id }}">{{ label }}</label>
  <div class="usa-hint" id="{{ id }}Hint">{{ hint }}</div>
  <input 
      id="{{ id }}" 
      type="{{ type }}" 
      inputmode="{{ inputmode }}" 
      name="{{ id }}" 
      placeholder="{{ placeholder }}" 
      pattern="{{ pattern }}" 
      class="usa-input usa-masked" 
      aria-describedby="{{ id }}Error"
      {% if datacharset %}data-charset="{{ datacharset }}"{% endif %}
      {% if disabled_state == 'disabled' %} disabled {%- endif %}
      {% if disabled_state == 'aria-disabled' %} aria-disabled="true" {%- endif %}
      {% if data_errorMessage %}data-errorMessage="{{ data_errorMessage }}"{% endif %}
      {% if data_errorMessageAlphabetical %}data-errorMessageAlphabetical="{{ data_errorMessageAlphabetical }}"{% endif %}
      {% if data_errorMessageNumerical %}data-errorMessageNumerical="{{ data_errorMessageNumerical }}"{% endif %}
      {% if data_errorMessageInputFull %}data-errorMessageInputFull="{{ data_errorMessageInputFull }}"{% endif %}
      >
  <span 
      id="{{ id }}Error" 
      class="usa-error-message"
      role="alert"
  ></span>
  </div>
</form>
