<form class="usa-form">
  <div class="usa-input-mask">
    <div class="usa-form-group">
      <label class="usa-label" for="{{ id }}">{{ label }}</label>
      <div class="usa-hint" id="{{ id }}-hint">{{ hint }}</div>
      <input
          aria-describedby="{{ id }}-hint {{ id }}-hint-info"
          class="usa-input usa-input-mask__field"
          {% if forceCase == "forceupper" %}forceupper="{{ forceupper }}"{% endif %}
          {% if forceCase == "forcelower" %}forcelower="{{ forcelower }}"{% endif %}
          id="{{ id }}"
          inputmode="{{ inputmode }}"
          mask="{{ mask }}"
          name="{{ id }}"
          pattern="{{ pattern }}"
          placeholder="{{ placeholder }}"
          type="{{ type }}"
      >
    </div>
    <span id="{{ id }}-hint-info" class="usa-input-mask__message"></span>
  </div>
</form>