<form class="usa-form">
  <label class="usa-label" for="{{ id }}">{{ label }}</label>
  <div class="usa-hint" id="{{ id }}Hint">{{ hint }}</div>
  <input 
      id="{{ id }}" 
      type="{{ type }}" 
      inputmode="{{ inputmode }}" 
      name="{{ id }}" 
      placeholder="{{ placeholder }}" 
      pattern="{{ pattern }}" 
      class="usa-input usa-masked" 
      aria-describedby="{{ id }}Error"
      {% if datacharset %}data-charset="{{ datacharset }}"{% endif %}
      {% if disabled_state == 'disabled' %} disabled {%- endif %}
      {% if disabled_state == 'aria-disabled' %} aria-disabled="true" {%- endif %}
      
      {% if data_errorMessage %}data-errorMessage="{{ data_errorMessage }}"{% endif %}
      {% if data_errorMessageAlphabetical %}data-errorMessageAlphabetical="{{ data_errorMessageAlphabetical }}"{% endif %}
      {% if data_errorMessageNumerical %}data-errorMessageNumerical="{{ data_errorMessageNumerical }}"{% endif %}
      {% if data_errorMessageInputFull %}data-errorMessageInputFull="{{ data_errorMessageInputFull }}"{% endif %}
      {% if data_errorMessagePaste %}data-errorMessagePaste="{{ data_errorMessagePaste }}"{% endif %}

      {% if data_errorMessageSrOnly %}data-errorMessageSrOnly="{{ data_errorMessageSrOnly }}"{% endif %}
      {% if data_errorMessageAlphabeticalSrOnly %}data-errorMessageAlphabeticalSrOnly="{{ data_errorMessageAlphabeticalSrOnly }}"{% endif %}
      {% if data_errorMessageNumericalSrOnly %}data-errorMessageNumericalSrOnly="{{ data_errorMessageNumericalSrOnly }}"{% endif %}
      {% if data_errorMessageInputFullSrOnly %}data-errorMessageInputFullSrOnly="{{ data_errorMessageInputFullSrOnly }}"{% endif %}
      {% if data_errorMessagePasteSrOnly %}data-errorMessagePasteSrOnly="{{ data_errorMessagePasteSrOnly }}"{% endif %}
      >
  </div>
</form>
