<form class="usa-form">
    <div class="usa-form-group">
      <label class="usa-label" for="{{ id }}">{{ label }}</label>
      <div class="usa-hint" id="{{ id }}-hint">{{ hint }}</div>
      <input
          aria-describedby="{{ id }}-hint {{ id }}-hint-info"
          class="usa-input usa-input-mask"
          {% if forceCase == "forceupper" %}forceupper="{{ forceupper }}"{% endif %}
          {% if forceCase == "forcelower" %}forcelower="{{ forcelower }}"{% endif %}
          id="{{ id }}"
          inputmode="{{ inputmode }}"
          mask="{{ mask }}"
          name="{{ id }}"
          pattern="{{ pattern }}"
          placeholder="{{ placeholder }}"
          type="{{ type }}"
      >
    </div>

  {% if test %}
      <label class="usa-label" for="{{ id }}-data-attribute-test">Custom status message test</label>
      <div class="usa-hint" id="{{ id }}-data-attribute-test-hint">
        This follows the same pattern as above, but it should show a custom invalid character message.
      </div>
      <input
          aria-describedby="{{ id }}-data-attribute-test-hint"
          class="usa-input usa-input-mask"
          forceupper
          id="{{ id }}-data-attribute-test"
          inputmode="{{ inputmode }}"
          mask="{{ mask }}"
          name="{{ id }}-data-attribute-test"
          pattern="{{ pattern }}"
          placeholder="{{ placeholder }}"
          type="{{ type }}"
          data-invalid-alpha-text="Aquí se requiere un carácter de letra"
          data-invalid-numeric-text="Aquí se requiere un carácter de número"
      >
  {% endif %}
</form>
