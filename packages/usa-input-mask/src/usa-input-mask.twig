<form class="usa-form">
  <label class="usa-label" for="{{ id }}">{{ label }}</label>
  <div class="usa-hint" id="{{ id }}Hint">{{ hint }}</div>
  <input 
      id="{{ id }}" 
      type="{{ type }}" 
      inputmode="{{ inputmode }}" 
      name="{{ id }}" 
      placeholder="{{ placeholder }}" 
      pattern="{{ pattern }}" 
      class="usa-input usa-masked" 
      aria-describedby="{{ id }}Error"
      {% if datacharset %}data-charset="{{ datacharset }}"{% endif %}
      {% if disabled_state == 'disabled' %} disabled {%- endif %}
      {% if disabled_state == 'aria-disabled' %} aria-disabled="true" {%- endif %}
      {% if dataErrorAlphabetical %}data-errorMsgAlpha="{{ dataErrorAlphabetical }}"{% endif %}
      {% if dataErrorNumerical %}data-errorMsgNum="{{ dataErrorNumerical }}"{% endif %}
      {% if dataErrorAlphanumeric %}data-errorMsgAlphaNum="{{ dataErrorAlphanumeric }}"{% endif %}
  >
  <span 
      id="{{ id }}Error" 
      class="usa-error-message usa-hide-error" 
      role="alert"
  ></span>
  </div>
</form>
