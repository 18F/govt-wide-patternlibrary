<form class="usa-form">
  <div class="usa-masked">
    <div class="usa-form-group">
      <label class="usa-label" for="{{ id }}">{{ label }}</label>
      <div class="usa-hint" id="{{ id }}-hint">{{ hint }}</div>
      <input 
          id="{{ id }}" 
          type="{{ type }}" 
          inputmode="{{ inputmode }}" 
          mask="{{ mask }}"
          name="{{ id }}" 
          placeholder="{{ placeholder }}" 
          pattern="{{ pattern }}" 
          class="usa-input usa-masked__field" 
          aria-describedby="{{ id }}-hint {{ id }}-hint-info"
      >
    </div>
    <span id="{{ id }}-hint-info" class="usa-masked__message">You can enter only numbers</span>
  </div>
</form>