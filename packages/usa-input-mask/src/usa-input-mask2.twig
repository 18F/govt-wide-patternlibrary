<form class="usa-form">
  {% for mask in masks %}
    <div class="usa-input-mask">
      <div class="usa-form-group">
        <label class="usa-label" for="{{ mask.id }}">{{ mask.label }}</label>
        <div class="usa-hint" id="{{ mask.id }}-hint">{{ mask.hint }}</div>
        <input 
            aria-describedby="{{ mask.id }}-hint {{ mask.id }}-hint-info"
            class="usa-input usa-input-mask__field"
            {% if mask.forceupper %}forceupper="{{ mask.forceupper }}"{% endif %}
            id="{{ mask.id }}"
            inputmode="{{ mask.inputmode }}"
            mask="{{ mask.mask }}"
            name="{{ mask.id }}"
            pattern="{{ mask.pattern }}"
            placeholder="{{ mask.placeholder }}"
            type="{{ mask.type }}"
        >
      </div>
      <span id="{{ mask.id }}-hint-info" class="usa-input-mask__message"></span>
    </div>
  {% endfor %}
</form>