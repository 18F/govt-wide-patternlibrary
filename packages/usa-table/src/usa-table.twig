{% if multipleHeaderRows %}
  {% set headerLoopCount = 0..1 %}
{% else %}
  {% set headerLoopCount = 0..0 %}
{% endif %}

{% if stickyHeader %}
  {% set bodyLoopCount = 0..6 %}
{% else %}
  {% set bodyLoopCount = 0..0 %}
{% endif %}

{% if scrollable %}
  <div class="usa-table-container--scrollable" tabindex="0">
{% endif %}

<table class="usa-table {{stickyHeader ? 'usa-table--sticky-header' : ''}} {{ modifier }}">
  {% if caption %}
    <caption>{{ caption }}</caption>
  {% endif %}

  {% if scrollable %}
    <col>
    <colgroup span="2"></colgroup>
    <colgroup span="2"></colgroup>
  {% endif %}

  <thead>
    {% for i in headerLoopCount %}
      <tr>
        {% for th in thead %}
          <th scope="{{ th.scope|default('col') }}">{{ th.title }}</th>
        {% endfor %}
      </tr>
    {% endfor %}
  </thead>
  <tbody>
    {% for i in bodyLoopCount %}
      {% for row in tbody %}
        <tr>
          {% for cell in row %}
            {% if not cell.scope %}
              <td>{{ cell.title }}</td>
            {% else %}
              <th scope="{{ cell.scope }}">{{ cell.title }}</th>
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    {% endfor %}
  </tbody>
</table>

{% if scrollable %}
  </div>
  <p>* in billions of dollars. Data for illustration purposes only.</p>
{% endif %}
