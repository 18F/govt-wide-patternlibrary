{% if scrollable %}
  <div class="usa-table-container--scrollable" tabindex="0">
{% endif %}

<table class="usa-table {{stickyheader ? 'usa-table--sticky-header' : ''}} {{ modifier }}">
  {% if caption %}
    <caption>{{ caption }}</caption>
  {% endif %}

  {% if scrollable %}
    <col>
    <colgroup span="2"></colgroup>
    <colgroup span="2"></colgroup>
  {% endif %}

  <thead>
    <tr>
    // DEMO ONLY - do not include in final production
        <th rowspan="2">Federal Budget<br> Baseline Projections</th>
        <th colspan="2" scope="colgroup" class="text-center">2017</th>
      </tr>
      <tr>
        <th scope="col" class="text-right">%GDP</th>
        <th scope="col" class="text-right">USD*</th>
      </tr>
  </thead>
  <tbody>
    {% for row in tbody %}
      <tr>
        {% for cell in row %}
          {% if not cell.scope %}
            <td>{{ cell.title }}</td>
          {% else %}
            <th scope="{{ cell.scope }}">{{ cell.title }}</th>
          {% endif %}
        {% endfor %}
      </tr>
    {% endfor %}
    {% if stickyheader %}
      {% for row in tbody %}
        <tr>
          {% for cell in row %}
            {% if not cell.scope %}
              <td>{{ cell.title }}</td>
            {% else %}
              <th scope="{{ cell.scope }}">{{ cell.title }}</th>
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    {% endif %}
    {% if stickyheader %}
      {% for row in tbody %}
        <tr>
          {% for cell in row %}
            {% if not cell.scope %}
              <td>{{ cell.title }}</td>
            {% else %}
              <th scope="{{ cell.scope }}">{{ cell.title }}</th>
            {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}
    {% endif %}
  </tbody>
</table>

{% if scrollable %}
  </div>
  <p>* in billions of dollars. Data for illustration purposes only.</p>
{% endif %}
