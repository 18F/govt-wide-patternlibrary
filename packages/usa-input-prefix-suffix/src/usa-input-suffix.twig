<form class="usa-form">
  <label class="usa-label" for="example-input-suffix">Weight, in pounds</label>
  <div class="usa-input-group usa-input-group--sm">
    <input type="text" id="example-input-suffix" class="usa-input" pattern="[0-9]*" inputmode="numeric">
    <div class="usa-input-suffix" aria-hidden="true">
      lbs.
    </div>
  </div>

  <label class="usa-label" for="example-input-suffix-disabled">Weight, in pounds (disabled)</label>
  <div class="usa-input-group usa-input-group--sm usa-input-group--disabled">
    <input type="text" id="example-input-suffix-disabled" class="usa-input" pattern="[0-9]*" inputmode="numeric" disabled>
    <div class="usa-input-suffix" aria-hidden="true">
      lbs.
    </div>
  </div>

  <label class="usa-label" for="example-input-suffix-disabled">Weight, in pounds (aria-disabled)</label>
  <div class="usa-input-group usa-input-group--sm usa-input-group--disabled">
    <input type="text" id="example-input-suffix-aria-disabled" class="usa-input" pattern="[0-9]*" inputmode="numeric" aria-disabled="true">
    <div class="usa-input-suffix" aria-hidden="true">
      lbs.
    </div>
  </div>
</form>
