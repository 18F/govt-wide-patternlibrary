<table class="usa-table {{ modifier }}">
  {% if caption %}
    <caption>{{ caption }}</caption>
  {% endif %}
  <thead>
    <tr>
      {% for th in thead %}
        <th scope="{{ th.scope|default('col') }}">{{ th.title }}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    {% for row in tbody %}
      <tr>
        {% for cell in row %}
          {% if not cell.scope %}
            <td>{{ cell.title }}</td>
          {% else %}
            <th scope="{{ cell.scope }}">{{ cell.title }}</th>
          {% endif %}
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>
