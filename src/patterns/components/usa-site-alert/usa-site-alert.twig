<section class="usa-site-alert {{ modifier }}" aria-label="Site alert">
  <div class="usa-alert">
    <div class="usa-alert__body">
      {%- if title %}
        <h3 class="usa-alert__heading">{{ title }}</h3>
      {%- endif %}

      {%- if list %}
        {{ list }}
      {%- endif %}

      {%- if text %}
        <p class="usa-alert__text">{{ text }}</p>
      {%- endif %}
    </div>
  </div>
</section>

