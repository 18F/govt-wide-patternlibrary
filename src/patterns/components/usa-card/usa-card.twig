{% set card_classes = 'usa-card ' ~ modifier|default('') %}
{% set image_fallback = 'https://designsystem.digital.gov/img/introducing-uswds-2-0/built-to-grow--alt.jpg' %}

<ul class="usa-card-group">
  {% for card in cards %}
    <li class="{{ card_classes ~ card.grid_class|default(default_grid_class) }}">
      <div class="usa-card__container">
        <header class="usa-card__header">
          <h2 class="usa-card__heading">{{ card.title }}</h2>
        </header>
        {% if card.media %}
          {% set media = card.media %}
          <div class="usa-card__media {{ media.media_classes|default('') }}">
            <div class="usa-card__img {{ media.image_classes|default('') }}">
              <img
                src="{{ media.image_src|default(image_fallback) }}"
                alt="{{ media.image_alt_text|default('A placeholder image') }}">
            </div>
          </div>
        {% endif %}
        <div class="usa-card__body">
          {% if card.content %}
            {% block card_body %}
              <p>{{ card.content }}</p>
            {% endblock %}
          {% endif %}
        </div>
        <div class="usa-card__footer">
          {% block card_footer %}
            <button class="usa-button">Visit Florida Keys</button>
          {% endblock %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
