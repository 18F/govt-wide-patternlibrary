{% embed './components/usa-footer/usa-footer.twig' with {
  'modifier': 'usa-footer--slim'
} %}
  {% block primary %}
    <div class="usa-footer__primary-container grid-row">
      <div class="mobile-lg:grid-col-8">
        {% include "./components/usa-footer/_usa-footer-nav-primary.twig" %}
      </div>
      <div class="mobile-lg:grid-col-4">
        <address class="usa-footer__address">
          <div class="grid-row grid-gap">
            <div class="grid-col-auto mobile-lg:grid-col-12 desktop:grid-col-auto">
              <div class="usa-footer__contact-info">
                <a href="tel:1-800-555-5555">
                  {{ agency_contact_info.phone_no }}
                </a>
              </div>
            </div>
            <div class="grid-col-auto mobile-lg:grid-col-12 desktop:grid-col-auto">
              <div class="usa-footer__contact-info">
                <a href="mailto:info@agency.gov">
                  {{ agency_contact_info.email }}
                </a>
              </div>
            </div>
          </div>
        </address>
      </div>
    </div>
  {% endblock %}
  {% block secondary %}
    <div class="usa-footer__logo grid-row grid-gap-2">
      <div class="grid-col-auto">
        <img class="usa-footer__logo-img" src="{{ uswds.path }}/img/logo-img.png" alt="">
      </div>
      <div class="grid-col-auto">
        <p class="usa-footer__logo-heading">{{ agency_contact_info.name }}</p>
      </div>
    </div>
  {% endblock %}
{% endembed %}
