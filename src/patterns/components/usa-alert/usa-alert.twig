<div class="usa-alert {{ modifier }}" {% if role %}role="{{ role }}"{% endif %}>
  <div class="usa-alert__body">
    {%- if title %}
      <h3 class="usa-alert__heading">{{ title }}</h3>
    {%- endif %}
    <p class="usa-alert__text">
      {% autoescape false %}
        {{ text }}
      {% endautoescape %}
    </p>
  </div>
</div>
