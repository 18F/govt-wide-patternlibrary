<h6 class="margin-bottom-0">Standard Layout</h6>
<ul class="usa-card-group">
  {%- for card in cards -%}
    {% if not card.flag %}
    <li class="tablet:grid-col-4 usa-card {{ card.classes }}">
      {%- include "@card--basic" -%}
    </li>
    {% endif %}
  {%- endfor -%}
</ul>
<h6 class="margin-bottom-0">Flag Layout</h6>
<ul class="usa-card-group">
  {%- for card in cards -%}
    {% if card.flag %}
    <li class="tablet:grid-col-6 usa-card {{ card.classes }}">
      {%- include "@card--basic" -%}
    </li>
    {% endif %}
  {%- endfor -%}
</ul>
