<form class="usa-form">
  <fieldset class="usa-fieldset">
    <legend class="usa-legend">Name</legend>
    <p>
      Required fields are marked with an <abbr title="required" class="usa-hint">*</abbr>.
    </p>
    <label class="usa-label" for="title">Title</label>
    <input class="usa-input usa-input--small" id="title" name="title" type="text">

    <label class="usa-label" for="first-name">
      First name <abbr title="required" class="usa-hint">*</abbr>
    </label>
    <input class="usa-input" id="first-name" name="first-name" type="text" required aria-required="true">

    <label class="usa-label" for="middle-name">Middle name</label>
    <input class="usa-input" id="middle-name" name="middle-name" type="text">

    <label class="usa-label" for="last-name">
      Last name <abbr title="required" class="usa-hint">*</abbr>
    </label>
    <input class="usa-input" id="last-name" name="last-name" type="text" required aria-required="true">
  </fieldset>
</form>
