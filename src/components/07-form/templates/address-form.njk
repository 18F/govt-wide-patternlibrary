        <option value="Armed Forces Pacific AP">AP - Armed Forces Pacific</option>
      </select>
    </div>

    <label class="usa-label" for="zip">Zip Code <abbr title="required" class="usa-hint">*</abbr></label>
    <input class="usa-input usa-input--medium" id="zip" name="zip" type="text" pattern="[\d]{5}(-[\d]{4})?">
  </fieldset>
</form>
